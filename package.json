{
  "version": "1.0.0",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "husky": "^4.2.3",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "client:format": "cd client && yarn run format",
    "server:format": "cd server && yarn run format"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all client:format server:format",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
